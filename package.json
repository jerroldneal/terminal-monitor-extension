{
  "name": "terminal-monitor",
  "displayName": "Terminal Monitor",
  "description": "Automatically closes idle terminals",
  "version": "1.0.1",
  "publisher": "jerroldneal",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terminalMonitor.start",
        "title": "Terminal Monitor: Start"
      },
      {
        "command": "terminalMonitor.stop",
        "title": "Terminal Monitor: Stop"
      }
    ],
    "configuration": {
      "title": "Terminal Monitor",
      "properties": {
        "terminalMonitor.enableLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable detailed logging of terminal activity to the Terminal Monitor output channel"
        }
      }
    }
  }
}
